<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/backnewn">



        <TextView
            android:id="@+id/text_view_header_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="60sp"
            android:gravity="center"
            android:textStyle="bold"
            />


        <ImageView
            android:id="@+id/full_image_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
           android:layout_centerInParent="true"
            android:layout_below="@+id/text_view_header_main"
            android:layout_above="@+id/text_view_footer_main"

        />


        <ImageView
            android:id="@+id/leftbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/leftbutton"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/rightbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rightbutton"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />



        <TextView
            android:id="@+id/text_view_footer_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/app_name"
            android:textSize="60sp"
            android:gravity="center"
            android:textStyle="bold"
            />

</RelativeLayout>