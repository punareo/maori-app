<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundblackboard"
    tools:context=".MyActivity">


    <GridLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/gridLayout"
        android:layout_centerInParent="true"
        android:alignmentMode="alignBounds"
        >

        <ImageButton
            android:id="@+id/image_button_NW"
            android:contentDescription="@string/image_holder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_marginLeft="50dp"

            />

        <Space
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="1"/>

        <ImageButton
            android:id="@+id/image_button_NE"
            android:contentDescription="@string/image_holder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@null"
            android:scaleType="fitStart"
            />

        <ImageButton
            android:id="@+id/image_button_SE"
            android:contentDescription="@string/image_holder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@null"
            android:scaleType="fitStart"
            />

        <ImageButton
            android:id="@+id/image_button_SW"
            android:contentDescription="@string/image_holder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@null"
            android:scaleType="fitStart"
            />

    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="1"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:id="@+id/text_view_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/test_question"
            android:textSize="40sp"
            android:textColor="#ffffffff"
            android:layout_row="1"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            />

    </GridLayout>
 <TextView
     android:id="@+id/text_view_score"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:textSize="50sp"
     android:textStyle="bold"
     android:textColor="#ffffffff"
     android:text="0"/>


</RelativeLayout>

